<%= form_for @post do |form| %>

  <p>
    <strong>What is your question? </strong><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
  <strong>Add More Description</strong>
    <%= form.text_area :text %>
  </p>
 
 <div>
    <%= form.label :subject_ids, "What subject does this question relate to?" %>
    <%= form.collection_check_boxes :subject_ids, Subject.all, :id, :name %>
  </div>

  <p>
    <%= form.submit %>
  </p>
 
<% end %>