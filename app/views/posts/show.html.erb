
<% if @post.user %>
 <p>
   Written by: <%= link_to @post.user.email, user_path(@post.user) %>
 </p>
 <%end %>
<p>
  <%= @post.title %>
</p>
 
<p>
  <%= @post.text %>
</p>

<% if user_signed_in? && @post.user_id == current_user.id %>
        <%= link_to 'Edit', edit_post_path %>
        <%= link_to 'Delete', post_path,
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
        <%end %>
 
<h6>Comments</h6>
<%= render @post.comments %>
 
<h6>Add a comment:</h6>
<%= render 'comments/form' %>
 
 <%= link_to 'Back', posts_path %>