<h1>Recent Posts</h1>
 
  <% @posts.each do |post| %>
  
      <div>
      <br>
      <%= link_to post.title, post_path(post) %><br>
      <% if user_signed_in? && post.user_id == current_user.id %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Delete', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
              <%end %>
    
  <% end %>

 </div>

